<form name="add_command" ng-submit="addCommand()">
  <div class="editor_modal_box">
    <header>
      <h1 class="script-info">New Script</h1>
    </header>
    <section>
      <div class="bigform">
            <p>
              <label class="label-field">Name:</label>
              <input type="text" class="full-width" ng-model="command.trigger" placeholder="Create a script" required></input>
            </p>

            <p>
              <label class="label-field">Description:</label>
              <input type="text" class="full-width" ng-model="command.description" placeholder="Describe what this script does" required></input>
            </p>
        </div>
    </section>
    <footer>
      <button type="submit" class="done-button">Create</button>
      <button type="button" class="cancel-button" ng-click="ui.modal_create=false;">Cancel</button>

    </footer>
  </div>
</form>

<style>
  .script-info {
    font-size: 26px;
    color: #FCBF10;
    letter-spacing: 0;
  }

  .label-field {
    font-size: 14px;
    color: #fff;
    margin-bottom: 4px;
  }

  .done-button {
    background: #FCBF10;
    border-radius: 16.5px;
    height: 33px;
    width: 85px;
    font-size: 14px;
    color: #101A2C;
    margin: 10px 0 10px;
  }

  .done-button:hover {
    color: #101A2C;
  }

  .cancel-button {
    background: #497AD2;
    border-radius: 16.5px;
    height: 33px;
    width: 85px;
    font-size: 14px;
    color: #101A2C;
    margin: 10px 0 10px;
  }

  .cancel-button:hover {
    color: #101A2C;
  }
</style>